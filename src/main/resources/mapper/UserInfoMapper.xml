    <select id="getUserInfoByUserId" parameterType="java.lang.Integer" resultType="com.redis.cuncurrency.red.packet.cuncurrencyredpacket.domain.UserInfo">
        SELECT
            su.id,
            su.user_name,
            su.nick_name,
            su.img_url,
            su.member,
            su.update_time,
            su.create_time
        FROM
            sys_user AS su
        <where>
            <if test="userId != null">
              su.id = #{userId}
            </if>
        </where>
    </select>
